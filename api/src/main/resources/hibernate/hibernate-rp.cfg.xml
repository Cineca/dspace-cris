		<mapping class="it.cilea.hku.authority.model.RPSubscription" />
		
		<mapping class="it.cilea.hku.authority.model.StatSubscription" />
		
		<mapping
			class="it.cilea.hku.authority.model.UserWS" />
		<mapping
